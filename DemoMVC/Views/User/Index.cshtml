@model List<User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Users Listing (Total @Model.Count)</h1>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>DateOfBirth</td>
            <td>Pan</td>
            <td>Address</td>
            <td>Gender</td>
            <td>MobileNumber</td>
            <td>Email</td>
            <td>Comment</td>
            <td>DepartmentRefId</td>
            <td>&nbsp;</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.DateOfBirth</td>
            <td>@user.Pan</td>
            <td>@user.Address</td>
            <td>@user.Gender</td>
            <td>@user.MobileNumber</td>
            <td>@user.Email</td>
            <td>@user.Comment</td>
            <td>@user.DepartmentRefId</td>
            <td>
                <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>